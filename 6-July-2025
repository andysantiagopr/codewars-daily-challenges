var isSquare = function(n) {
  // Check if the square root of n is an integer and n is non-negative
  if (Number.isInteger(Math.sqrt(n)) && n >= 0) {
    return true;
  } else {
    return false;
  }
}

// âœ… Example Usage
console.log(isSquare(25));  // âžž true
console.log(isSquare(26));  // âžž false
console.log(isSquare(0));   // âžž true
console.log(isSquare(-1));  // âžž false
