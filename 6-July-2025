function squareSum(numbers) {
  // Initialize the total to 0
  let total = 0;

  // Use .reduce() to square each number and accumulate the total sum
  return total = numbers.reduce(function(accumulator, currentValue) {
    return accumulator + (currentValue ** 2);  
  }, 0);
}

// âœ… Example Usage
console.log(squareSum([1, 2, 2])); // âžž 9
console.log(squareSum([0, 3, 4, 5])); // âžž 50
console.log(squareSum([])); // âžž 0


