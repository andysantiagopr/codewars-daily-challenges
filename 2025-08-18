const binaryArrayToNumber = arr => parseInt(arr.join(''), 2); 

// parseInt() converts a string representation of a number into an integer.
// The second argument (2) tells parseInt() to interpret the string as binary.
// .join('') combines the array elements into a single string without separators.
// If .join() is used without parameters, the default separator is a comma (",").
// We need a continuous string (e.g., "1011") instead of "1,0,1,1" for correct binary conversion.

/* 
Examples:
binaryArrayToNumber([1,0,1,1]) // 11
binaryArrayToNumber([1,1,1,1]) // 15
binaryArrayToNumber([0,1,0,1]) // 5
*/
